{
  "manifest_version": 3,
  "name": "Quiver Switcher",
  "version": "1.0.0",
  "description": "Quiver AI 账号快速切换工具",
  "permissions": ["storage", "cookies", "scripting", "tabs"],
  "host_permissions": [
    "https://app.quiver.ai/*",
    "https://api.mail.tm/*"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://app.quiver.ai/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "Quiver Switcher",
    "default_popup": "popup.html"
  }
}
